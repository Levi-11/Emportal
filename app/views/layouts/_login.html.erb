<% if yield(:user) == "admin" %>
<i class="fa fa-users faw" aria-hidden="true"></i>
<h1 class = "ad">Welcome to <%= yield(:user) %></h1>
<% end %>
<div class="row">


  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_admin_path) do |f| %>

      <%= f.label :username, class: 'label' %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'form-control' %>
       <%= f.label :remember_me, class: "checkbox inline chk" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <br>
      <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
    <% end %>

  </div>
</div>