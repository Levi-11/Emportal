<% provide(:title, "Edit user") %>
<ul class = "u">
<li>Employee Portal Admin</li>
<li><%= link_to "Dashboard",admin_dashboard_url  %></li>
<li><%= link_to "Employee",admin_employee_url  %></li>
<li><%= link_to "Projects",admin_project_url  %></li>
<li class = "logout"><%= link_to "Log out", logout_path, method: :delete %></li>
</ul>
<div class = "Edit Page">
<h1 class ="text-center">Edit</h1>

<div class="row1">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@employee, url: admin_edit_employee_path(:id=>@employee.id), method: :patch) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <br><%= f.label :designation %>
      <%= f.text_field :designation %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <br><%= f.label :address %>
      <%= f.text_area :address, rows: "5" %>

      <%= f.label :active %>
      <%= f.check_box :active %>

      <br><br><%= f.submit "Edit", class: "btn btn-primary" %>
      <br><br><%= link_to "Cancel", admin_employee_url, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
</div>