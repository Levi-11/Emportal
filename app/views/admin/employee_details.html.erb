<% provide(:title, @employee.name)%>
<ul class = "u">
<li>Employee Portal Admin</li>
<li><%= link_to "Dashboard",admin_dashboard_url  %></li>
<li><%= link_to "Employee",admin_employee_url  %></li>
<li><%= link_to "Projects",admin_project_url  %></li>
<li class = "logout"><%= link_to "Log out", logout_path, method: :delete %></li>
</ul>

<div class="container det">
<%= gravatar_for @employee %>
<h1 class = "text-center"><%= @employee.name %> </h1>
<div class = "empgrid">
<div><h4 class = "text-right">Employee ID</h4></div>
<div><h4 class = "text-left">RP<%= @employee.id %></h4></div>
<div><h4 class = "text-right">Email</h4></div>
<div><h4 class = "text-left"><%= @employee.email %></h4></div>
<div><h4 class = "text-right">Designation</h4></div>
<div><h4 class = "text-left"><%= @employee.designation %></h4></div>
<div><h4 class = "text-right">Phone Number</h4></div>
<div><h4 class = "text-left"><%= @employee.phone %></h4></div>
<div><h4 class = "text-right">Address</h4></div>
<div><h4 class = "text-left"><%= @employee.address.split(', ').join("<br>").html_safe %></h4></div>
</div>
</div>
